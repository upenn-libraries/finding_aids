<h4>
  <%= title %>
  <button
    class="btn btn-light btn-sm collapsable-toggle <%= open ? '' : 'collapsed' %>"
    type="button"
    data-toggle="collapse"
    data-target="#<%= @collapsable_id %>"
    aria-expanded="true"
    aria-controls="<%= @collapsable_id %>"
  ></button>
</h4>

<div class="collapse <%= open ? 'show' : '' %>" id="<%= @collapsable_id %>">
  <%= body %>
</div>

<%= content_tag @component,
                id: @id,
                data: {
                  'document-id': @document.id.to_s.parameterize,
                  'document-counter': @counter,
                },
                itemscope: true,
                itemtype: @document.itemtype,
                class: classes.flatten.join(' ') do %>
  <%= header %>
  <% if body.present? %>
    <%= body %>
  <% else %>
    <div class="document-main-section">
      <%= title %>
      <%= render 'catalog/show_finding_aids_message' %>
      <ul class="nav nav-tabs" id="showPageTabs" role="tablist">
        <li class="nav-item">
          <a href="#overview" class="nav-link active" id="overview-tab" data-toggle="tab" role="tab" aria-controls="overview-tab" aria-selected="true">
            Collection Overview
          </a>
        </li>
        <li class="nav-item">
          <a href="#inventory" class="nav-link" id="inventory-tab" data-toggle="tab" role="tab" aria-controls="inventory-tab" aria-selected="false">
            Collection Inventory
          </a>
        </li>
      </ul>
      <%= embed %>
      <%= content %>
      <div class="tab-content" id="showTabContent">
        <div id="overview" class="tab-pane fade show active" role="tabpanel" aria-labelledby="overview-tab">
          <%= metadata component: Blacklight::DocumentMetadataComponent %>
          <div id="show-administrative-information">
            <h2>Administrative Information</h2>
            <% SolrDocument::ParsedEad::ADMIN_INFO_SECTIONS.each do |section| %>
              <%= render AdditionalInformationComponent.new title: t(section, scope: :sections), nodes: @document.parsed_ead.try(section) %>
            <% end %>
          </div>
          <div id="show-other-information">
            <h2>Other Information</h2>
            <% SolrDocument::ParsedEad::OTHER_SECTIONS.each do |section| %>
              <%= render AdditionalInformationComponent.new title: t(section, scope: :sections), nodes: @document.parsed_ead.try(section) %>
            <% end %>
          </div>
          <%= render(TopicsComponent.new(topics: @document.topics_hash)) %>
        </div>
        <div id="inventory" class="tab-pane fade" role="tabpanel" aria-labelledby="inventory-tab">
          <%= render(CollectionsInventoryComponent.new(node: @document.parsed_ead.dsc)) %>
        </div>
      </div>
      <% metadata_sections.each do |section| %>
        <%= section %>
      <% end %>
    </div>

    <%= thumbnail %>
  <% end %>
  <%= footer %>
<% end %>

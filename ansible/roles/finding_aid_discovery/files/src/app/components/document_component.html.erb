<%= content_tag @component,
                id: @id,
                data: {
                  'document-id': @document.id.to_s.parameterize,
                  'document-counter': @counter,
                },
                itemscope: true,
                itemtype: @document.itemtype,
                class: classes.flatten.join(' ') do %>
  <%= header %>
  <% if body.present? %>
    <%= body %>
  <% else %>
    <div class="document-main-section">
      <h2 id="main-content" class="visually-hidden">Main content</h2>
      <% if @show %>
        <%= title %>
        <%= embed %>
        <%= content %>
        <div id="overview">
          <h3 class="visually-hidden">Notifications</h3>
          <%= location_message %>
          <%= access_clarification_message %>
          <h3 class="visually-hidden">Overview and metadata sections</h3>
          <%= render CollapsableMetadataSection.new(title: t('sections.collection_overview'), open: true) do %>
            <%= render metadata component: Blacklight::DocumentMetadataComponent %>
          <% end %>
          <% collapsable_metadata_sections.each do |section| %>
            <%= section %>
          <% end %>
        </div>
        <div id="inventory">
          <h3><%= t('sections.collection_inventory') %></h3>
          <div class="request-instructions"><h4>Requesting materials:</h4> Click on the 'ADD' button next to any containers you wish to request. When complete, click the 'Submit' button.</div>
          <%= collection_inventory %>
        </div>
        <h3 class="visually-hidden">Navigation links</h3>
        <ul class="show-page-links no-list-style clearfix">
          <li class="go-inventory"><%= link_to "Go to the inventory", "" %></li>
          <li class="print-all"><%= link_to "Print the complete finding aid", "" %></li>
          <li class="suggest"><%= link_to "Suggest a correction", "" %></li>
        </ul>
      <% else %>
        <%= title component: ::DocumentTitleComponent %>
        <%= embed %>
        <%= content %>
        <%= metadata component: Blacklight::DocumentMetadataComponent %>
        <% metadata_sections.each do |section| %>
          <%= section %>
        <% end %>
        <%= location_message %>
      <% end %>
    </div>

    <%= thumbnail %>
  <% end %>
  <%= footer %>
<% end %>

<%= render 'shared/admin_menu' %>

<h1>User Summary</h1>

<div class="btn-group mb-3">
  <%= link_to 'Edit User', edit_user_path(@user), class: 'btn btn-outline-dark' %>
  <%# TODO: add turbo confirmation when available %>
  <%= link_to 'Delete User', user_path(@user), class: 'btn btn-outline-danger', method: :delete %>
</div>

<dl class="user-list">
  <dt>PennKey</dt>
  <dd class="pennkey"><%= @user.uid %></dd>

  <dt>Email</dt>
  <dd class="email"><%= @user.email %></dd>

  <dt>Created At</dt>
  <dd class="created-at"><%= @user.created_at.to_fs(:display) %></dd>

  <dt>Active Status</dt>
  <dd class="active"><%= @user.active ? 'Active' : 'Inactive' %></dd>
</dl>
